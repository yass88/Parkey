
{% extends "base.html.twig" %}


{% block title %}
   Ma Page Profil
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-8 mx-auto">
                <h3 class="my-4 text-center">
                    Mon Profil
                </h3>
                <p>Avatar: <img src="{{ asset('uploads/users/' ~ app.user.avatar) }}" class="card-img-top" style="width: 100px; height:100px;"></p>
                <p>Prénom: {{ app.user.firstname }} </p>
                <p>Nom: {{ app.user.lastname }} </p>
                <p>Nickname: {{ app.user.nickname }} </p>
                <p>Télephone: {{ app.user.phone }} </p>
                <p>E-mail: {{ app.user.email }} </p>
                <p>Adresse: {{ app.user.address }} </p>
                <p>Message: {{ app.user.message }} </p>



            </div>
        </div>
    </div>

{% endblock %}